<div class="container filters">
  <div class="inner">
    <%= form_tag do %>
      <%= label_tag(:source, "Source") %>
      <%=
        select_tag(:source, options_for_select([
          "XMM-Newton",
          "Fermi",
          "AGILE",
          "Chandra",
          "INTEGRAL",
          "NuSTAR",
          "RXTE",
          "Suzaku",
          "Swift",
          "Herschel",
          "Spitzer"
        ]))
      %>

      <%= label_tag(:target, "Target:") %>
      <%= text_field_tag(:target) %>

      <%= label_tag(:start, "Start:") %>
      <%= text_field_tag(:start, 1.week.ago.to_date) %>

      <%= label_tag(:end, "End:") %>
      <%= text_field_tag(:end, 1.week.from_now.to_date) %>

      <%= submit_tag("Filter", :id => "filter") %>
    <% end %>
  </div>
</div>

