<div class="container filters">
  <div class="inner">
    <%= form_tag do %>
      <%= label_tag(:source, "Source") %>
      <%= select_tag(:source, options_for_select([
        ['AGILE', "agile"],
        ['Chandra', "chandra"],
        ['Fermi', "fermi"],
        ['INTEGRAL', "integral"],
        ['NuSTAR', "nustar"],
        ['XMM-NEWTON', "xmm-newton"]
      ], "xmm-newton")) %>

      <%= label_tag(:target, "Target:") %>
      <%= text_field_tag(:target) %>

      <%= label_tag(:start, "Start:") %>
      <%= text_field_tag(:start, 1.week.ago.to_date) %>

      <%= label_tag(:end, "End:") %>
      <%= text_field_tag(:end, Date.today) %>

      <%= submit_tag("Filter") %>
    <% end %>
  </div>
</div>

